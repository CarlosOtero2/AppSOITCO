---
interface Feature {
  name: string;
  included: boolean;
}

interface Props {
  title: string;
  price: string;
  description: string;
  features: Feature[];
  highlighted?: boolean;
}

const { title, price, description, features, highlighted = false } = Astro.props;
---

<div class={`rounded-lg p-8 ${highlighted ? 'bg-primary text-white shadow-xl scale-105' : 'bg-white shadow-md'}`}>
  <h3 class="text-2xl font-bold mb-4">{title}</h3>
  <p class="text-3xl font-bold mb-4">
    {price}
    <span class="text-sm font-normal">/mes</span>
  </p>
  <p class={`mb-6 ${highlighted ? 'text-gray-100' : 'text-gray-600'}`}>{description}</p>
  <ul class="space-y-3 mb-8">
    {features.map(feature => (
      <li class="flex items-center">
        <i class={`fas ${feature.included ? 'fa-check' : 'fa-times'} mr-2 ${
          highlighted ? 'text-white' : feature.included ? 'text-green-500' : 'text-red-500'
        }`}></i>
        <span class={highlighted ? 'text-gray-100' : 'text-gray-600'}>{feature.name}</span>
      </li>
    ))}
  </ul>
  <a
    href="/contacto"
    class={`block text-center py-3 px-6 rounded-full font-bold transition-colors ${
      highlighted
        ? 'bg-white text-primary hover:bg-gray-100'
        : 'bg-primary text-white hover:bg-secondary'
    }`}
  >
    Comenzar ahora
  </a>
</div>