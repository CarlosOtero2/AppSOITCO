---
interface Props {
  name: string;
  position: string;
  image: string;
}

const { name, position, image } = Astro.props;
---

<div class="text-center">
  <img
    src={image}
    alt={name}
    class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
  />
  <h3 class="text-xl font-bold mb-1">{name}</h3>
  <p class="text-gray-600">{position}</p>
</div>